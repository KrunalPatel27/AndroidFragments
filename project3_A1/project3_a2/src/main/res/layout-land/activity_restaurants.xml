<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.project3_a2.ActivityRestaurants">
    <fragment
        android:id="@+id/list_attractions"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        class="com.example.project3_a2.RestaurantTitlesFragment"/>

    <fragment
        android:id="@+id/details_attractions"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2"
        class="com.example.project3_a2.RestaurantDetailsFragment"/>

</LinearLayout>
